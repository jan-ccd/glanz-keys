extends layout

block content
  form(class='keyAdd pure-form pure-form-aligned' action='/admin/key/add/submit' method='post')
    
        h2= title 
        div(class='pure-control-group')                
            label(class='nameInput' for='keyName') Name of the key:
            input(id='keyName' type='text' placeholder='e.g. Cuvry A' name='key_name')
        div(class='pure-control-group')    
          label(for='shortName' class='keyNameLabel') Short name:    
          input(type='text' id='shortName' name='short_name' placeholder='e.g. CuvA')     
        div(class='pure-control-group')                
            label(class='nameInput' for='keyHolder') Who has it now?
            input(id='keyHolder' type='text' placeholder='e.g. Majka' name='holder')    
        div(class='pure-control-group') 
          button(type='submit' class='pure-button pure-button-primary') Save new key
        p
          a(href='/admin' class='button-secondary pure-button') back to list  


